modules = ["go-1.21", "go-1.24", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Deployment Status"

[[workflows.workflow]]
name = "Deployment Status"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Bot is running in production\""

[workflows.workflow.metadata]
outputType = "console"

[deployment]
run = ["./training-tg-bot"]
deploymentTarget = "autoscale"
build = ["go build -v -o training-tg-bot ./cmd/main.go"]

[[ports]]
localPort = 5000
externalPort = 80
